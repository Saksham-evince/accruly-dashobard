:root
  /* Font size for small devices */
  --font-size: 16px

  /* Font size for large devices */
  --font-size-large: 18px

  /* Space between characters */
  --tracking: 0.05em

  /* Type scale ratio */
  --scale-ratio: 1.2
  --scale-1: calc(1rem / var(--scale-ratio))
  --scale-2: 1rem
  --scale-3: calc(var(--scale-2) * var(--scale-ratio))
  --scale-4: calc(var(--scale-3) * var(--scale-ratio))
  --scale-5: calc(var(--scale-4) * var(--scale-ratio))
  --scale-6: calc(var(--scale-5) * var(--scale-ratio))
  --scale-7: calc(var(--scale-6) * var(--scale-ratio))
  --scale-8: calc(var(--scale-7) * var(--scale-ratio))
  --scale-9: calc(var(--scale-8) * var(--scale-ratio))
  --scale-10: calc(var(--scale-9) * var(--scale-ratio))

  /* Basic unit of space */
  --space-unit: 1.5rem

  /* Font families */
  --font-primary:
    system-ui,
    /* macOS 10.11-10.12 */ -apple-system,
    /* Windows 6+ */ Segoe UI,
    /* Android 4+ */ Roboto,
    /* Ubuntu 10.10+ */ Ubuntu,
    /* Gnome 3+ */ Cantarell,
    /* KDE Plasma 5+ */ Noto Sans,
    /* fallback */ sans-serif,
    /* macOS emoji */ "Apple Color Emoji",
    /* Windows emoji */ "Segoe UI Emoji",
    /* Windows emoji */ "Segoe UI Symbol",
    /* Linux emoji */ "Noto Color Emoji"

  --font-secondary:
    system-ui,
    /* macOS 10.11-10.12 */ -apple-system,
    /* Windows 6+ */ Segoe UI,
    /* Android 4+ */ Roboto,
    /* Ubuntu 10.10+ */ Ubuntu,
    /* Gnome 3+ */ Cantarell,
    /* KDE Plasma 5+ */ Noto Sans,
    /* fallback */ sans-serif,
    /* macOS emoji */ "Apple Color Emoji",
    /* Windows emoji */ "Segoe UI Emoji",
    /* Windows emoji */ "Segoe UI Symbol",
    /* Linux emoji */ "Noto Color Emoji"

  /* Color palette */
  --color-base-primary: #4262ca
  --color-base-selection: #EBE1D3
  --color-base-lines: #DCDCDC
  --color-text-primary: #444444
  --color-text-secondary: #777777
  --color-text-heading: #222222
  --color-text-inverted: white
  --color-background-dark: #32373d
  --color-background-light: #f5f5f5
  --color-background-body: white
  --color-state-muted: #eeeeee
  --color-state-success: #10a887
  --color-state-warning: #F17F42
  --color-state-error: #da3c3c

  // Root Styles
  box-sizing: border-box
  font-family: var(--font-primary)
  line-height: 1.5
  background-color: var(--color-background-body)
  color: var(--color-text-primary)
  font-size: var(--font-size)
  text-rendering: optimizeLegibility

  @media (min-width: 480px)
    font-size: var(--font-size-large)


*,
::before,
::after
  background-repeat: no-repeat
  box-sizing: inherit
  margin: 0
  padding: 0


::before,
::after
  text-decoration: inherit
  vertical-align: inherit


hr
  background-color: var(--color-base-lines)
  height: 1px
  border: 0


nav ol,
nav ul
  padding-left: 0


nav li
  list-style: none


small
  /* Use the next smaller size in the scale */
  font-size: calc(100% / var(--scale-ratio))
  color: var(--color-text-secondary)


a
  color: var(--color-base-primary)
  cursor: pointer


h1, h2, h3, h4, h5, h6
  font-family: var(--font-secondary)
  color: var(--color-text-heading)


h1
  font-size: var(--scale-6)
h2
  font-size: var(--scale-5)
h3
  font-size: var(--scale-4)
h4
  font-size: var(--scale-3)
h5
  font-size: var(--scale-2)
h6
  font-size: var(--scale-1)


/* A margin top is added to all the elements except the first one in each nesting level */
* + *
  margin-top: var(--space-unit)


/* These elements shouldnâ€™t get a margin */
column,
grid,
li,
kbd,
div,
input,
option,
select,
a,
textarea,
body,
main,
span,
dd,
code,
label,
br,
h1 + p,
h2 + p,
h3 + p,
h4 + p,
h5 + p,
h6 + p
  margin-top: 0


input
  font-size: 85%


input[type="text"]
  margin-top: 0.5rem


input:not([type="submit"]),
select,
textarea
  width: 100%
  min-height: 2rem


input[disabled]
  cursor: not-allowed
  border: 0


input:not([type="submit"]):not([type="range"]),
select,
textarea
  border: 1px solid var(--color-base-lines)
  padding: 0 0.75em


input[type="checkbox"],
input[type="file"],
input[type="image"],
input[type="radio"]
  height: auto
  width: auto


input[type="checkbox"],
input[type="radio"]
  line-height: normal
  padding: 0
  vertical-align: middle


input[type="file"]
  border: none
  line-height: 1lh
  padding: 0


select
  background-color: transparent
  padding-left: 0.5em
  width: auto
  min-width: 10em
  height: 1.5rem


select[disabled]
  color: var(--color-text-secondary)


select[multiple]
  height: auto
  width: 100%
  padding: 0


select::-ms-expand
  display: none


select::-ms-value
  color: currentColor


select option
  padding: 0 0.75em


label
  display: block
  line-height: 1.5rem


input[type="checkbox"] + label,
input[type="radio"] + label
  display: inline-block
  margin-left: 0.5em
  margin-top: 0
  padding-top: 0


span + select
  margin-left: 1rem

button
  border: 0
  background-color: var(--color-base-primary)
  color: var(--color-text-inverted)
  padding: 0.75rem 1.5rem
  cursor: pointer

input[type="file"]
  border: 0 !important

/*
  GRID SYSTEM
*/

container
  --grid-container: 1200px
  --grid-gutter: 2rem

  display: block
  box-sizing: border-box
  margin-left: auto
  margin-right: auto
  max-width: var(--grid-container)
  padding-left: calc(var(--grid-gutter) / 2)
  padding-right: calc(var(--grid-gutter) / 2)


grid
  display: block
  box-sizing: border-box
  display: flex
  margin-left: calc(var(--grid-gutter) / -2)
  margin-right: calc(var(--grid-gutter) / -2)
  flex-direction: column


column
  display: block
  box-sizing: border-box
  flex: 1 1 auto
  padding-left: calc(var(--grid-gutter) / 2)
  padding-right: calc(var(--grid-gutter) / 2)


/* No Gutters */
grid[no-gutter]
  margin-left: 0
  margin-right: 0

  & > column
    padding-left: 0
    padding-right: 0


/* No Collapse columns */
grid[no-collapse]
 flex-flow: row nowrap


/* Column wrapping */
grid[wrap]
  flex-wrap: wrap

grid[no-wrap]
  flex-wrap: nowrap

grid[wrap-reverse]
  flex-wrap: wrap-reverse


/* Direction of columns in a row */
grid[row]
  flex-direction: row

grid[row-reverse]
  flex-direction: row-reverse

grid[column]
  flex-direction: column

grid[column-reverse]
  flex-direction: column-reverse


/* Justify content */
grid[justify-start]
  justify-content: flex-start

grid[justify-end]
  justify-content: flex-end

grid[justify-center]
  justify-content: center

grid[justify-between]
  justify-content: space-between

grid[justify-around]
  justify-content: space-around


/* Alignment of all columns in a row */
grid[top]
  align-items: flex-start

grid[center]
  align-items: center

grid[bottom]
  align-items: flex-end


/* Alignment of individual columns */
column[top]
  align-self: flex-start

column[center]
  align-self: center

column[bottom]
  align-self: flex-end


/* Reorder columns */
for i in (1..12)
  column[order=\"{i}\"]
    order: i


// Only set the colums after 480px
@media (min-width: 480px)

  /* Collapse columns */
  grid
    flex-direction: row


  /* Columns */
  for i in (1..12)
    column[size=\"{i}\"]
      flex: 0 1 (i / 12 * 100%)
      max-width: (i / 12 * 100%)


  /* Column offsets */
  for i in (1..11)
    column[offset=\"{i}\"]
      margin-left: (i / 12 * 100%)
